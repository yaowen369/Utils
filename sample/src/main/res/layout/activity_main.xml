<com.yaoxiaowen.android.sample.view.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yw= "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    tools:context="com.yaoxiaowen.android.sample.MainActivity"
    android:background="#33000000"
    >

    <Button
        android:layout_width= "wrap_content"
        android:layout_height= "wrap_content"
        android:background= "#FF8247"
        android:textColor= "#ffffff"
        android:textSize="20dip"
        android:padding= "20dip"
        android:text="按钮1"
        android:layout_marginLeft="20dp"
        yw:flow_layout_position="left"
        />


    <Button
        android:layout_width= "wrap_content"
        android:layout_height= "wrap_content"
        android:background= "#8B0A50"
        android:textColor= "#ffffff"
        android:textSize="20dip"
        android:padding= "10dip"
        android:text="按钮2222222222222"
        android:layout_marginTop="30dp"
        yw:flow_layout_position="right"
        />

    <Button
        android:layout_width= "wrap_content"
        android:layout_height= "wrap_content"
        android:background= "#7CFC00"
        android:textColor= "#ffffff"
        android:textSize="20dip"
        android:padding= "15dip"
        android:layout_marginLeft = "30dip"
        android:layout_marginBottom = "10dip"
        android:text="按钮333333"
        yw:flow_layout_position="bottom"
        />

    <Button
        android:layout_width= "wrap_content"
        android:layout_height= "wrap_content"
        android:background= "#1E90FF"
        android:textColor= "#ffffff"
        android:textSize="10dip"
        android:padding= "10dip"
        android:layout_marginBottom = "30dip"
        android:text="按钮4"
        yw:flow_layout_position="rightAndBottom"
        />

    <Button
        android:layout_width= "wrap_content"
        android:layout_height= "wrap_content"
        android:background= "#191970"
        android:textColor= "#ffffff"
        android:textSize="20dip"
        android:padding= "15dip"
        android:layout_marginBottom = "30dip"
        android:layout_marginRight = "30dip"
        android:text="按钮5"
        yw:flow_layout_position = "center"
        />

</com.yaoxiaowen.android.sample.view.FlowLayout>


